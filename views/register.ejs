<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sort Visualiser</title>
  <link rel="stylesheet" type="text/css" href="styles.css">
</head>

<body>
  <div class="header-container">
    <h1 class="project-title">Sort Visualiser</h1>
    <nav class="navbar">
      <a href="/" class="navlink">Visualiser</a>
      <a href="/about" class="navlink">About</a>
      <span class='navlink'><a href="/login" class="navlink">Login</a>/<a href="/logout"
          class="navlink">Logout</a></span>
    </nav>
  </div>
  <div class="main-container">
    <div class="form-container">
      <form method="post" action="register">
        <legend>Register</legend>
        <div class="input-field">
          <label for="username-register">Username</label>
          <input type="text" name="username" id="username-register" value="" placeholder="John" required>
        </div>
        <div class="input-field">
          <label for="password-register">Password</label>
          <input type="password" name="password" id="password-register" value="" required>
        </div>
        <span class="register">Already have an account? Click <a href="/login" class="navlink register">here</a>.</span>
        <div class=" input-field">
          <input type="submit" value="Register" class="button submit">
        </div>
      </form>
    </div>
  </div>
  <script src="register.js"></script>
</body>

</html>
